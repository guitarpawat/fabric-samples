extends layout.pug

block content
    form(action='/redeem' method='post')
        
        .form-group
            p Issuer
            input.input(type='text' name='issuer')
        .form-group
            p Paper Number
            input.input(type='text' name='papernum')
        .form-group
            p Owner
            input.input(type='text' name='redeemowner' value=id readonly)
        .form-group
            p Date
            input.input(type='text' name='date')
        
        p
        button(type='submit') Redeem